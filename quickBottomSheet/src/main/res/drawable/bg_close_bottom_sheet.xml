<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/quick_bottom_sheet_ripple_color">

    <item
        android:id="@android:id/mask">

        <shape
            android:shape="oval">
            <solid android:color="@color/quick_bottom_sheet_ripple_color"/>
            <stroke
                android:color="@color/quick_bottom_sheet_divider_color"
                android:width="1dp"/>
        </shape>

    </item>

    <item>
        <shape
            android:shape="oval">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:color="@color/quick_bottom_sheet_divider_color"
                android:width="1dp"/>
        </shape>
    </item>

</ripple>